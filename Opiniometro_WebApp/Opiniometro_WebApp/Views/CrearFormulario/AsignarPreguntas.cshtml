@model List<Opiniometro_WebApp.Models.Formulario>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<thead>
        
        <tr>
            @foreach (var item in Model)
            {
                <td>
                
                    <div class="row">
                        <h4>Codigo: @item.CodigoFormulario </h4>
                        <h4>Nombre: @item.Nombre</h4>
                    </div>

                    <div>
                        <div style="float: right; width: 500px; padding: 15px;">
                            @Html.Action("preguntasVParcial")
                        </div>

                        <div style=" width: 500px; padding:  15px;">
                            @Html.Action("seccionesVParcial")
                        </div>
                    </div>


                    <button disabled>
                        Añadir pregunta al formulario.
                    </button>

                    <div style="float: left; width: 1000px; padding: 50px;">
                        @Html.Action("SeccionesAsignadas", new
                   {
                       CodForm = item.CodigoFormulario})
                    </div>


                </td>
            }
        </tr>
    
</thead>








