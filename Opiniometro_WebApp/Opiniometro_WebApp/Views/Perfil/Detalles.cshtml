@model Opiniometro_WebApp.Models.Perfil

@{
    ViewBag.Title = "Detalles";
}

@using (Html.BeginForm("ObtenerPerfilBorrar", "Perfil", FormMethod.Post))
{

<h2>Detalles</h2>

<div>
    <h4>Perfil</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <br>
        <br>
        <dt>
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

    </dl>
</div>

<br>
<p>
    <div style="margin-left:200px;">
        @Html.ActionLink("Editar", "Editar", "Perfil", new { nombre = Model.Nombre }, new { @class = "btn btn-default" })
        @Html.ActionLink("Cancelar", "VerPerfiles", "Perfil", "", new { @class = "btn btn-default" })
        </div>
</p>
}