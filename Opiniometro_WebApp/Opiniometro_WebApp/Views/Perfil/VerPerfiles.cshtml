@{
    ViewBag.Title = "VerPerfiles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Perfiles</h2>
@using (Html.BeginForm())
{
    <p>
        <div class="form-group, form-inline">
            @Html.TextBox("nom")
            <input type="submit" value="Buscar" class="btn btn-default" />
        </div>
    </p>
}

    <div style="margin-left:80px; width: 600px ">
        <table class="table">
            <tr>
                <th>

                    Nombre
                </th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>

                        @item.Nombre
                        
                    </td>

                    <td>
                      
                            @Html.ActionLink("Detalles", "Detalles", "Perfil", new { id = item.Nombre }, new { @class = "btn btn-default" })
                       

                    </td>

                </tr>
               
                
                
                    

              

            }

        </table>
     </div>
