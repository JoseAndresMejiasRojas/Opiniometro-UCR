@model Opiniometro_WebApp.Models.Estudiante

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Estudiante</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <!-- Se comenta para poder desplegarlo con tilde, la columna se llama Carne (sin tilde)
                @Html.DisplayNameFor(model => model.Carne):-->
            Carné:

        </dt>

        <dd>
            @Html.DisplayFor(model => model.Carne)
        </dd>

        <dt>
            Nombre completo:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Persona.Nombre) @Html.DisplayFor(model => model.Persona.Apellido1) @Html.DisplayFor(model => model.Persona.Apellido2)
        </dd>
        
        <dt>
            <!-- Se comenta para poder desplegarlo con tilde, la columna se llama Cerne (sin tilde)
                @Html.DisplayNameFor(model => model.Cedula_Estudiante):-->
            <!--Buscar como poner etiqueta de cedula sin usar etiqueta de la tabla Persona-->
            Cédula:
        </dt>
        
        <dd>
            @Html.DisplayFor(model => model.Cedula_Estudiante)
        </dd>
    </dl>
</div>
<p>
   
    @Html.ActionLink("Regresar a perfil", "Perfil", new {id = @Model.Cedula_Estudiante})
</p>
