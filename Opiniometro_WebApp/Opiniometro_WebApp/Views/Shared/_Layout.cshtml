<!DOCTYPE html>
<html>



<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Opiniómetro@UCR</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!--Barra-->
    @Html.Partial("~\\Views\\Shared\\Auth\\BarraLogin.cshtml")

    <nav class="navbar navbar-inverse navbar-fixed-top" style="margin-top:145px" ;>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Opiniómetro@UCR", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <div class="dropdown">
                    <button class="dropbtn">
                        Usuario
                        <i class="fa fa-caret-down"></i>
                    </button>
                    <div class="dropdown-contentt">
                        <a onclick="location.href='@Url.Action("Contact", "Home")';return false;">Insertar Usuario</a>
                        <a onclick="location.href='@Url.Action("About", "Home")';return false;">Editar información de otros usuarios</a>
                    </div>
                </div>

                <div class="dropdown">
                    <button class="dropbtn">
                        Evaluaciones
                        <i class="fa fa-caret-down"></i>
                    </button>
                    <div class="dropdown-contentt">
                        <a onclick="location.href='@Url.Action("About", "Home")';return false;"> Insertar Formulario </a>
                        <a onclick="location.href='@Url.Action("AsignarFormularios", "AsignarFormularios")';return false;">Asignar Formulario</a>
                        <a onclick="location.href='@Url.Action("About", "Home")';return false;">Visualizar resultados evaluaciones</a>
                    </div>
                </div>


            </div>
        </div>
    </nav>



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer></footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

