@model Opiniometro_WebApp.Models.AsignarFormulariosModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Página de asignación de formularios.</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">

</head>
<body>

    <div>
        <h1>Asignación de formularios</h1>
    </div>

    <div class="container">
            <div class="row">
                <div class="col-sm-8">
                    <h1>Buscar grupos</h1>

                    

                    <!-- Esta forma hace que la búsqueda aparezca como parte del URL. -->
                    <!--<form asp-controller="AsignarFormularios" asp-action="Index">
                        <p>
                            Nombre: <input type="text" name="SearchString">
                            <input type="submit" value="Buscar" />
                        </p>
                    </form>-->

                    <!-- Esta forma también recarga la página, pero no muestra los criterios de busqueda en el URL. -->
                    @using (Html.BeginForm())
                    {
                        <p>
                            Nombre del curso: @Html.TextBox("SearchString")
                            <input type="submit" value="Buscar" />
                        </p>
                    }

                    <table class="table">
                        <tr>
                            <th>
                                Curso
                            </th>
                            <th>
                                Ciclo
                            </th>
                            <th>
                                Numero de grupo
                            </th>
                            <th>
                                Seleccionar para asignar
                            </th>
                        </tr>

                        @foreach (var item in Model.Grupos)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.nombreCurso)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.anno) - @Html.DisplayFor(modelItem => item.semestre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.numero)
                            </td>
                            <td>
                                <input type="checkbox" name="Curso" value="Curso"><br>
                            </td>
                        </tr>
                        }

                    </table>

                </div>
                <div class="col-sm-4">
                    <h1>Tus formularios</h1>
                    <div class="list-group">
                        <a href="#" class="list-group-item list-group-item-action">Formulario 1</a>
                        <a href="#" class="list-group-item list-group-item-action">Formulario 2</a>
                        <a href="#" class="list-group-item list-group-item-action">Formulario 3</a>
                    </div>
                </div>
            </div>
        </div>

</body>
</html>
