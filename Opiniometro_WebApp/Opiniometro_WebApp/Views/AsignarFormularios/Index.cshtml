@model Opiniometro_WebApp.Models.AsignarFormulariosViewModel

@{
    ViewBag.Title = "Index";
}

@Styles.Render("~/Content/scrollbar-tabla.css")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")﻿
@Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")﻿

<div>
    <h1 align="center">Asignación de herramientas de evaluación</h1>
</div>


<div class="container">
   @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-sm-8">
                <div class="panel panel-default">
                    <div class="panel-heading"><h3>Buscar grupos</h3></div>
                    <div class="panel-body">

                        <!-- Esta forma también recarga la página, pero no muestra los criterios de busqueda en el URL. -->
                        <!-- Buscador -->
                        <p>
                            <div>
                                <label>Unidad Academica:</label> @Html.DropDownList("unidadAcademica", null, "<Seleccione Unidad Académica>", new { @class = "form-control" })
                            </div>
                            <div>
                                <label> Carreras: </label> @Html.DropDownList("nombreCarrera", null, "<Seleccione Carrera>", new { @class = "form-control" })
                            </div>
                            <div>
                                <label> Cursos: </label> @Html.DropDownList("nombreCurso", null, "<Seleccione Curso>", new { @class = "form-control" })
                            </div>
                            @*<div>
                                    <label> Semestre: </label> @Html.DropDownList("semestre", null, "<Seleccione Semestre>", new { @class = "form-control" })
                                </div>*@
                            @*<div>
                                    <label> Año: </label> @Html.DropDownList("ano", null, "<Seleccione Año>", new { @class = "form-control" })<br />
                                </div>*@
                            <div>
                                @Html.TextBox("SearchString", "", new { placeholder = "Nombre del curso" })
                                <input type="submit" value="Buscar grupos" />
                            </div>
                        </p>
                        

                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3>Buscar formularios</h3>
                    </div>
                    <div class="panel-body">
                        @Html.TextBox("FormSearchString", "", new { placeholder = "Nombre del formulario" })
                        <input type="submit" value="Buscar formularios" />
                    </div>
                </div>
            </div>
        </div>
    }

        @using (Html.BeginForm("Asignar", "AsignarFormularios", FormMethod.Post))
        {
            <div class="row">
                <div class="col-sm-8">
                    <div class="panel panel-default">
                        <div class="panel-heading"><h3>Grupos</h3></div>
                        <div class="panel-body">

                            @*Tabla de grupos*@

                            <table class="fixed_header">
                                <thead>
                                    <tr>
                                        <th>
                                            <div align='center'>Selec. para asignar</div>
                                        </th>
                                        <th>
                                            <div align='center'>Sigla</div>
                                        </th>
                                        <th>
                                            <div align='center'>Curso</div>
                                        </th>
                                        <th>
                                            <div align='center'>Grupo</div>
                                        </th>
                                        <th>
                                            <div align='center'>Profesor</div>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Despliega los datos de los grupos usando un modelo personalizado: ElegirGrupoEditorTemplate -->
                                    @Html.EditorFor(model => Model.Grupos)
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>

        }


                <div class="col-sm-4">


                <div class="panel panel-default">
                    <div class="panel-heading"><h3>Resultados:</h3></div>
                    <div class="panel-body">
                        <!-- Tabla de grupos -->
                        <table class="fixed_header">
                            <!-- Table row (fila) de encabezados. -->
                            <thead>
                                <!-- Table header -->
                                <th>
                                    <div align='center'>Curso</div>
                                </th>
                                <th>
                                    <div align='center'>Ciclo</div>
                                </th>
                                <th>
                                    <div align='center'> Numero de grupo</div>
                                </th>
                                <th>
                                    <div align='center'>Seleccionar para asignar</div>
                                </th>
                            </thead>
                            <tbody>
                                <!-- Para cada item en Model::Grupos... -->
                                @foreach (var item in Model.Grupos)
                                {
                                    <!-- Table row (fila) de elementos -->
                                    <tr>
                                        <!-- Nombre de curso -->
                                        <td>
                                            @Html.DisplayFor(modelItem => item.nombreCurso)
                                        </td>
                                        <!-- Año -->
                                        <td>
                                            <div align='center'>@Html.DisplayFor(modelItem => item.anno) - @Html.DisplayFor(modelItem => item.semestre)</div>
                                        </td>
                                        <!-- Numero de grupo -->
                                        <td>
                                            <div align='center'>@Html.DisplayFor(modelItem => item.numero)</div>
                                        </td>
                                        <!-- Checkbox para asignar (por el momento no tiene funcionalidad) -->
                                        <td>
                                            <div align='center'><input type="checkbox" name="Curso" value="Curso"></div><br>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                                
                        </table>
                    </div>
                </div>                  
            </div>                       
            <div class="col-sm-4">

            <div class="panel panel-default">
                <div class="panel-heading"><h3>Tus formularios</h3></div>
                <div class="panel-body">


                    @using (Ajax.BeginForm("SeleccionFormularios", "AsignarFormularios", new AjaxOptions() { HttpMethod = "Post", UpdateTargetId = "form-content" }))
                    {
                        @Html.TextBox("formulario", "", new { placeholder = "Nombre del formulario" })
                        <input type="submit" value="Buscar" />
                        <div id="form-content">
                            @Html.Partial("SeleccionFormularios", Model.Formularios)
                        </div>
                    }




                </div>
            </div>
        </div>
    </div>

    <div align='center'>
        <input type="submit" name="Asignar" id="Asignar" value="Asignar" />
    </div>

</div>

