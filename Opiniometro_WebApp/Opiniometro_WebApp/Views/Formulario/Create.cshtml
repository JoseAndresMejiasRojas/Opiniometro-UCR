@model Opiniometro_WebApp.Models.Formulario

@{
    ViewBag.Title = "Create";
}

<h2>Crear Formulario</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @*<h4>Formulario</h4>*@
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Código", htmlAttributes: new { @class = "control-label col-md-2"}  @id = "codiguito" @oninput = "codigoLleno()")

        <div class="col-md-10">
            @Html.EditorFor(model => model.CodigoFormulario, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CodigoFormulario, "", new { @class = "text-danger" })

        </div>
    </div>

    <div class="form-group">
        @Html.Label("Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div>
    </div>

    @* Creacion de los tres botones de la forma que el PO quiere que se visualicen siempre *@
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crear" class="btn btn-secondary" id="botonCrearFormulario" onclick="accionBotonCrearFormulario()" />
            @*<input type="submit" value="Vista Previa" class="btn btn-secondary" p id="botonVistaPreviaFormulario" onclick="accionBotonVistaPreviaFormulario()" />*@
            <input type="submit" value="Cancelar" class="btn btn-secondary" id="botonCancelarFormulario" onclick="accionBotonCancelarFormulario()" />
        </div>
    </div>

    @* Accion al seleccionar el boton de crear formulario , deberia irse a la pagina de crear pregunta*@
    <script>
        function accionBotonCrearFormulario() {
            document.getElementById("botonCrearFormulario").style.color = "green";
        }
    </script>

    @* Accion al seleccionar el boton de vista previa de formulario*@
    @*<script>
            function accionBotonVistaPreviaFormulario() {
                document.getElementById("botonVistaPreviaFormulario").style.color = "blue";
            }
        </script>*@

    @* Accion al seleccionar el boton de cancelar la creacion de un formulario *@
    <script>
        function accionBotonCancelarFormulario() {

            document.getElementById("botonCancelarFormulario").style.color = "red";

        }
    </script>

    <p id="demo"></p>
    <script>
        function codigoLleno() {

            var x = document.getElementById("codiguito").value;
            document.getElementById("demo").innerHTML = "You wrote: " + x;

        }
    </script>




</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
