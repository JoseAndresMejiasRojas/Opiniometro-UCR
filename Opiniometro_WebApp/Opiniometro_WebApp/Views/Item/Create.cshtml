    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Tipo Pregunta", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
