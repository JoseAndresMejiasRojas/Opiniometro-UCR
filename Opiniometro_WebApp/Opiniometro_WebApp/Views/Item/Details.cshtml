@model Opiniometro_WebApp.Models.Item

@{
    ViewBag.Title = "Vista Previa";
}

<h2>Vista Previa</h2>



<div>
    <dl class="dl-horizontal">

        <dd>
            @Html.DisplayFor(model => model.TextoPregunta)
            @*<textarea name="descripcion" rows="5" cols="40">@Html.DisplayFor(model => model.TextoPregunta)</textarea>*@
        </dd>

        <div class="form-group">
            @Html.Label("", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select id="observacion" onchange="seleccionarObservacion()">
                    <option value="Si">Si</option>
                    <option value="No">No</option>
                    <option value="No se/No respondo/No aplica">No se/No respondo/No aplica</option>
                </select>
                <p id="observacionID"></p>
            </div>
        </div>

    </dl>
</div>

<script language="javascript">
    if (model.TipoPregunta == 1) {
        <textarea name="descripcion" rows="5" cols="40">Escriba su respuesta aqui</textarea>
    }
    if (model.TipoPregunta == 3) {
        <textarea name="descripcion" rows="5" cols="40">Si/No</textarea>
    }
    if (model.TieneObservacion == 1) {
        <textarea name="descripcion" rows="5" cols="40">Escriba su respuesta aqui</textarea>
    }
</script>

<script>
    function seleccionarTieneObservacion()
    {
        if (model.TieneObservacion == 1) {
            <textarea name="descripcion" rows="5" cols="40">Escriba su respuesta aqui</textarea>
        }
    }
</script>



