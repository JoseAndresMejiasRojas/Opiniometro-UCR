@using Opiniometro_WebApp.Controllers.Servicios

@{
    ViewBag.Title = "Permisos";
}

<h2>Permisos</h2>

@{
    // Obtengo los permisos del correo actual.
    var permisos_usuario = (IdentidadManager)Session[IdentidadManager.obtener_correo_actual()];

    // Si el usuario tiene permisos en el sistema.
    if (permisos_usuario != null)
    {
        if (permisos_usuario.verificar_permiso("SC-01234", 1, IdPermiso.VER_CURSOS))
        {
            <b>Este html se inserta si el usuario puede ver cursos</b>
        }

        if (permisos_usuario.verificar_permiso("SC-01234", 0, IdPermiso.ASIGNAR_FORMUALRIO))
        {
            <b>Esto es un html de un usuario que puede asignar un formulario</b>
        }
    }
}

